@model IEnumerable<News_Manager.Models.News>
@{
    ViewData["Title"] = "Lista de Notícias";
    var search = ViewData["Search"] as string;
}
<div class="d-flex justify-content-between mb-3">
    <h2>Notícias</h2>
    <a class="btn btn-primary" asp-action="Create">Nova Notícia</a>
</div>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@search" class="form-control" placeholder="Pesquisar por título ou autor..." />
        <button class="btn btn-outline-secondary" type="submit">Pesquisar</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Limpar</a>
    </div>
</form>

<table class="table table-striped">
    <thead><tr><th>Título</th><th>Autor</th><th>Data</th><th>Categoria</th><th>Ações</th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.PublishDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Category</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
