@model News_Manager.Models.News
<h2>Detalhes da Notícia</h2>

<div class="mb-3">
    <h4>@Model.Title</h4>
    <p><strong>Autor:</strong> @Model.Author</p>
    <p><strong>Data:</strong> @Model.PublishDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Categoria:</strong> @Model.Category</p>
    <p><strong>Publicado:</strong> @(Model.IsPublished ? "Sim" : "Não")</p>
</div>

<div>
    <p>@Model.Content</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
